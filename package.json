{
  "name": "weirdos",
  "module": "index.tsx",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --hot src/index.tsx & bun run tailwind:watch",
    "lint": "eslint . --fix",
    "build": "bun run tailwind:build",
    "type-check": "tsc --noEmit",
    "format": "prettier --write src/",
    "format-check": "prettier --log-level warn --check src/",
    "tailwind:watch": "bunx tailwindcss -i ./src/app.css -o ./static/app.css --watch",
    "tailwind:build": "bunx tailwindcss -i ./src/app.css -o ./static/app.css --minify"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "hono": "^4.8.4",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/bun": "latest",
    "@types/eslint-config-prettier": "^6.11.3",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "typescript-eslint": "^8.35.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
